@model Paypalsample.Models.Productamount
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <br />
    <br />
    <br />
    <div class="container">
        <div class="row">
            @using (Html.BeginForm("Index", "Home", FormMethod.Post))
            {
                <div class="form-group">
                    <div class="row">
                        <label for="Customer Name" class="col-md-3 control-label">Item Price</label>
                        <div class="col-lg-6 col-md-6">
                            @Html.TextBoxFor(m => m.price, new { @class = "form-control", placeholder = "Price",required="required" })
                            
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">

                        <div class="col-md-offset-3 col-md-9">
                            <input type="submit" value="PayNow" class="btn btn-success" />
                        </div>
                    </div>
                </div>

            }

        </div>
    </div>
</body>
</html>
